<h1>New game</h1>
<ul>
<% @letters.each do |letter| %>
  <li><%= letter %> </li>
  <% end %>
</ul>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="word">What is the longest word you can find ?</label>
  <br>
  <input type="text" name="word">
  <input type="submit">
</form>
